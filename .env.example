# Canvas API Configuration
# Copy this file to .env and fill in your values

# Your Canvas domain (e.g., canvas.instructure.com, myschool.instructure.com)
CANVAS_DOMAIN=

# Your Canvas API Token
# To get your token:
# 1. Log into Canvas
# 2. Go to Account > Settings
# 3. Scroll to "Approved Integrations"
# 4. Click "+ New Access Token"
# 5. Enter a purpose and click "Generate Token"
# 6. Copy the token (you won't see it again!)
CANVAS_API_TOKEN=

# Optional: Default view settings
DEFAULT_CALENDAR_VIEW=week  # Options: today, week, month, upcoming, all
DEFAULT_ASSIGNMENT_FILTER=upcoming  # Options: all, upcoming, missing, submitted, graded

# Optional: Display settings
SHOW_COURSE_CODES=true
SHOW_INSTRUCTOR_NAMES=true
DATE_FORMAT=en-US  # Options: en-US, en-GB, ISO

# Optional: Performance settings
API_TIMEOUT=30000  # API timeout in milliseconds
MAX_RETRIES=3  # Number of retries for failed requests